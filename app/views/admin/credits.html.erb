<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
  <h2 class="text-xl font-semibold text-black-700 dark:text-gray-200 mb-4">Credits</h2>

  <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <tr>
      <th scope="col" class="px-6 py-3">
        User Name
      </th>
      <th scope="col" class="px-6 py-3">
        Amount
      </th>
      <th scope="col" class="px-6 py-3">
        Last Updated
      </th>
    </tr>
    </thead>
    <tbody>
    <% @credits.each do |credit| %>
      <tr>
        <td class="px-6 py-4">
          <%= credit.email %> <!-- Assuming `credit.user` is loaded and has a `name` attribute -->
        </td>
        <td class="px-6 py-4">
          <%= credit.amount %>
        </td>
        <td class="px-6 py-4">
          <%= credit.updated_at.strftime('%B %d, %Y') %> <!-- Format the date as needed -->
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
