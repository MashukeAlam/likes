<div class="flex justify-center flex-col">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-4">
    <%= f.label :email, class: "block text-lg font-medium" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 px-4 py-2 border rounded-md focus:outline-none focus:ring-2" %>
  </div>

  <div class="field mb-4">
    <%= f.label :password, class: "block text-lg font-medium" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "mt-2 px-4 py-2 border rounded-md focus:outline-none focus:ring-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-4 flex items-center">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, class: "text-lg" %>
    </div>
  <% end %>

  <div class="actions text-center">
    <%= f.submit "Log in", class: "py-2 px-4 border rounded-md" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>